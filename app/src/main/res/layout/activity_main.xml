<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="polimi.it.trovalintruso.MainActivity"
    android:id="@+id/main_area"
    android:background="@drawable/sfondo_arancio">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dip"
        android:layout_marginTop="20dip"
        android:src="@drawable/logo_intruso" />

    <ImageView
        android:id="@+id/image_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/impostazioni"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="20dip"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="40dip"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TROVA L\'INTRUSO"
            android:layout_centerHorizontal="true"
            android:textSize="70sp"
            android:textStyle="bold"
            android:id="@+id/main_title"
            android:layout_marginTop="30dip"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/main_title"
            android:layout_marginTop="30dip">

            <ImageView
                android:id="@+id/image_single_player"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tasto_singolo"
                android:layout_marginRight="60dip"/>

            <ImageView
                android:id="@+id/image_multi_player"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tasto_multi"
                android:layout_marginLeft="60dip"/>
        </LinearLayout>

    </LinearLayout>
